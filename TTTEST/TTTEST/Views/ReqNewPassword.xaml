<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TTTEST.Views.ReqNewPassword">
    <ContentPage.Content>
        <StackLayout Margin="5" VerticalOptions="Center">
            <Image Source="logo.png" Background="#707070" WidthRequest="100"></Image>
            <Label FontSize="Large" TextColor="blue" HorizontalOptions="Center" Text="비밀번호를 분실했나요?"/>
            <Label FontSize="Large" TextColor="blue" HorizontalOptions="Center" Text="등록된 이메일로 새로운 패스워드를 전송합니다"/>
            <Entry Margin="10" Placeholder="등록된 이메일" PlaceholderColor="#707070" x:Name="entEmail"/>
            <Button Margin="10" Background="#f9e3" Clicked="sdcLoginPage"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>